<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.funcode.funmovie">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FunMovie">
        <activity
            android:name="com.funcode.funmovie.detail.DetailMovieActivity"
            android:label="Informasi Detail"
            android:parentActivityName="com.funcode.funmovie.home.HomeActivity"/>
        <activity
            android:name="com.funcode.funmovie.home.HomeActivity"
            android:theme="@style/Theme.FunMovie.NoActionBar"/>
        <activity
            android:name="com.funcode.funmovie.splashscreen.SplashScreenActivity"
            android:theme="@style/Theme.FunMovie.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>